.mg-right-box{
    padding: 40rpx;
    margin: 20rpx 10rpx 0 20rpx;
    background-color: white;
    box-shadow: 0 0 40rpx rgba(0, 0, 0, 0.05);
    height: calc(100% - 60px);
    position: relative;
}

.mg-right-num{
    position: absolute; left: 0; top: 0; z-index: 10;
}
.mg-right-num::after{
    content: ""; position: absolute; left: 0; top: 0; z-index: 1;
    width: 0; height: 0; border-right: 60rpx solid transparent; border-top: 60rpx solid rgba(0, 0, 0, 0.1);
}
.mg-right-num text{ position: absolute; z-index: 10; left: 10rpx; top: 6rpx; font-size: 28rpx; color: #666; }

