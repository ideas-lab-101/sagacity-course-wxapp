
.logo-box{
    padding: 70rpx 20rpx 20rpx;
}
.logo{
    width: 180rpx;
    height: auto;
}

.slide-box{
    padding-top: 40rpx;
    height: 690rpx;
}
swiper-item{ overflow: initial;}
.slide-item{
    position: relative;
    height: 100%;
}
.slide-imgBox{
    text-align: center;
}
.slide-item.active .slide-image{
    transform: scale(1, 1);
    box-shadow: 0 40px 40px -20px rgba(0, 0, 0, 0.3), 0 3px 5px rgba(0, 0, 0, 0.1);
}
.slide-item .slide-image{
    transform: scale(0.9, 0.9);
}
.slide-image{
    width: 50vw;
    height: 66.66vw;
    transition: transform 1s;
    position: relative;
}
.slide-desc{ position: absolute; left: 0; bottom: 0; z-index: 10; width: 100%;}
.slide-txt{
    position: relative;
    width: 100%;
    z-index: 99;
}
.slide-txt ._insert{
    text-align: center;
    position: relative;
    color: black;
    padding-top: 40rpx;
}
.slide-txt ._title{
    padding: 10rpx 30rpx 30rpx;
    white-space:nowrap;
    position: relative;
}
.slide-txt ._title::after{
    position: absolute; content: ""; height: 6rpx; bottom: 4rpx; left: 50%; transform: translateX(-50%); width: 8%; border-radius: 30px; background-color: black;
}
.slide-txt ._intro{
    text-align: left;
    line-height: 1.8;
    padding: 10rpx 50rpx 10rpx;
    height: 76rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    margin-top: 20rpx;
}
.slide-txt ._link{
    margin-top: 30rpx;
}
.slide-container{ position: relative;}
.swiper-dots{
    position: absolute;
    right: 10rpx;
    bottom: 120rpx;
    z-index: 99;
    color: white;
}

.section-box{
    padding-top: 70rpx;
}
.section-title{
    text-align: left;
    padding: 20rpx 20rpx 20rpx 30rpx;
    position: relative;
    z-index: 1;
}
.section-title[data-title]::after{
    content: attr(data-title);position: absolute; left: 20%; top: 0%;z-index: -1;font-size: 50rpx;color: #d1d1d1; width: 50%; height: 100%;
}
.section-title text._title{
    position: relative;
    z-index: 1;
    font-size: 34rpx;
    display: inline-block;
}
