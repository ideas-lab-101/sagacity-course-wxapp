.slide-box{
    padding-top: 120rpx;
    height: 690rpx;
}
.slide-item{
    position: relative;
    height: 100%;
}
.slide-imgBox{
    text-align: center;
}
.slide-item.active .slide-image{
    transform: scale(1, 1);
    box-shadow: 0 40px 40px -20px rgba(0, 0, 0, 0.3), 0 3px 5px rgba(0, 0, 0, 0.1);
}
.slide-item.active .slide-image::after{ opacity: 0;}
.slide-item .slide-image{
    transform: scale(0.9, 0.9);
}
.slide-image{
    width: 50vw;
    height: 66.66vw;
    transition: all 1s;
    position: relative;
}
.slide-image::after{ content: ""; position: absolute; z-index: 1; left: 0; top: 0; background: black; opacity: 0.5; width: 100%; height: 100%; transition: all 1s;}
.slide-desc{ position: absolute; left: 0; bottom: 0; z-index: 10; width: 100%;}
.slide-txt{
    position: relative;
    width: 100%;
    z-index: 99;
}
.slide-txt ._insert{
    text-align: center;
    position: relative;
    color: black;
    padding-top: 40rpx;
}
.slide-txt ._title{
    padding: 10rpx 30rpx 30rpx;
    white-space:nowrap;
    position: relative;
}
.slide-txt ._title::after{
    position: absolute; content: ""; height: 6rpx; bottom: 4rpx; left: 50%; transform: translateX(-50%); width: 8%; border-radius: 30px; background-color: black;
}
.slide-txt ._intro{
    text-align: left;
    line-height: 1.8;
    padding: 10rpx 50rpx 10rpx;
    height: 76rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    margin-top: 20rpx;
}
.slide-txt ._link{
    margin-top: 30rpx;
}
.slide-container{ position: relative;}
.swiper-dots{
    position: absolute;
    left: 10rpx;
    top: 60rpx;
    z-index: 99;
    color: white;
}

.section-box{
    margin-top: 70rpx;
}
.section-title{
    text-align: left;
    padding: 20rpx 0rpx 20rpx 30rpx;
    position: relative;
}
.section-title[data-title]::after{
    content: attr(data-title);position: absolute; left: 20%; top: 0%;z-index: -1;font-size: 50rpx;color: #d1d1d1; width: 50%; height: 100%;
}
.section-title text._title{
    position: relative;
    z-index: 1;
    font-size: 34rpx;
    display: inline-block;
}
.section-title text._title::after{
    content: "";position: absolute; right: -50rpx; bottom: 0; z-index: -2; background-color: #ff3e02; width: 30rpx; height: 30rpx; border-radius: 200rpx; opacity: 0.3;
}
.section-title text._title::before{
    content: "";position: absolute; right: -25rpx; bottom: -15rpx; z-index: -2;background-color: #f1e300;width: 15rpx; height: 15rpx; border-radius: 200rpx; opacity: 0.75;
}
.section-title .more{ font-size: 50rpx;}

.section-content{
    padding: 30rpx 0 0;
}
.book-page-scroll{
    white-space: nowrap;
}
.book-page-single{
    text-align: center;
    display: inline-block;
    vertical-align: top;
    width: 40vw;
    height: 214rpx;
}
.book-page-single ._shadow{
    border-radius: 10rpx;
    overflow: hidden;
}
.book-page-single image{
    height: 120rpx;
}
.book-page-single ._insert{
    padding: 20rpx 20rpx;
}
.book-page-single ._date{
    position: absolute;
    left: 0;
    bottom: 0;
    display: block;
    width: 100%;
    height: 100%;
    z-index: 1;
    background: rgba(0, 0, 0, 0.5);
    text-align: left;
    color: white;
}
.book-page-single ._date text{
    position: absolute;
    bottom: 5rpx;
    left: 5%;
    width: 90%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.book-page-single ._type{
    position: absolute;
    left: 50%;
    top: 50%;
    display: inline-block;
    z-index: 10;
    transform: translate(-50%, -50%);
    color: white;
}
.book-page-single ._type text.iconfont{font-size: 40rpx;}
.book-page-single ._txt{
    margin-top: 20rpx;
    display: block;
    overflow:hidden;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
    text-align: left;
    white-space: normal;
}

.floatSwiper-box{
    width: 100%;
    height: 360rpx;
}
.floatSwiper-item {
    background-color: white;
    width: 33.33vw;
}
.floatSwiper-item ._insert{ padding: 0 20rpx;}
.floatSwiper-item ._header{ text-align: center;}
.floatSwiper-item ._header image{ display: inline-block; width: 100%; height: 280rpx;}
.floatSwiper-item ._name{ text-align: center; margin-top: 20rpx;overflow: hidden; display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp: 2; height: 85rpx;}
.floatSwiper-item ._info{ margin-top: 10rpx; }
