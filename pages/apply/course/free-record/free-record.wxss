.record-btn01-b{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 180rpx;
  flex: 1;
}
.record-btn01{
  margin: 0 40rpx;
  text-align: center;
  border-radius: 300rpx;
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  vertical-align: middle;
  font-size: 32rpx;
  transition: transform 0.2s linear;
}
.record-btn01:active{
  transform: scale(0.7, 0.7);
}
.record-btn02.active{
  -webkit-animation:moveLeft 0.5s ease-out alternate;
  animation:moveLeft 0.5s ease-out alternate;
}
.record-btn01.start{
  border: 3rpx solid #ff3e02;
  background-color: white;
  box-shadow: 0rpx 0rpx 70rpx rgba(234, 30, 81, 0.1);
}
.record-btn01.start ._end{
  background-color: #ff3e02;
}
.record-btn01.cancel.active{
  -webkit-animation:moveRight 0.5s ease-out alternate;
  animation:moveRight 0.5s ease-out alternate;
}
.record-btn01 ._end{
  border-radius: 14rpx;
  background-color: #009b4c;
  height: 50rpx;
  width: 50rpx;
  display: inline-block;
  vertical-align: middle;
}
@-webkit-keyframes moveRight{
  0%{transform:translate(-500%,0)}
  100%{transform:translate(0,0)}
}
@keyframes moveRight{
  0%{transform:translate(-500%,0)}
  100%{transform:translate(0,0)}
}
@-webkit-keyframes moveLeft{
  0%{transform:translate(500%,0)}
  100%{transform:translate(0,0)}
}
@keyframes moveLeft{
  0%{transform:translate(500%,0)}
  100%{transform:translate(0,0)}
}


.record-reciprocal{
  position: absolute;
  left: 50%; 
  transform: translateX(-50%); 
  top: -100rpx; 
  z-index: 20; 
  text-align: left; 
  font-family: -apple-system-font, "Helvetica Neue", sans-serif;
  height: 40rpx; line-height: 40rpx; display: inline-block; width: 200rpx;
}
.record-reciprocal text{
  display: inline-block; 
  width: 20rpx; 
  height: 20rpx; 
  background-color: #acce22; 
  border-radius: 100rpx;
  margin: 0 10rpx; 
}

