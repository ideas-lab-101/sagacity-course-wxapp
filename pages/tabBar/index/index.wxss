.section-title .more{ font-size: 30rpx; position: relative; background-color:rgba(115, 52, 41, 0.15); color: black; border-radius: 100rpx;}

.section-content{
    padding: 30rpx 0 0;
}
.book-page-scroll{
    white-space: nowrap;
}
.book-page-single{
    text-align: center;
    display: inline-block;
    vertical-align: top;
    width: 40vw;
    height: 214rpx;
}
.book-page-single ._shadow{
    border-radius: 8rpx;
    overflow: hidden;
}
.book-page-single image{
    height: 120rpx;
}
.book-page-single ._insert{
    padding: 20rpx 20rpx;
}
.book-page-single ._date{
    position: absolute;
    left: 0;
    bottom: 0;
    display: block;
    width: 100%;
    height: 100%;
    z-index: 1;
    background: rgba(0, 0, 0, 0.5);
    text-align: left;
    color: white;
}
.book-page-single ._date text{
    position: absolute;
    bottom: 5rpx;
    left: 5%;
    width: 90%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.book-page-single ._type{
    position: absolute;
    left: 50%;
    top: 50%;
    display: inline-block;
    z-index: 10;
    transform: translate(-50%, -50%);
    color: white;
}
.book-page-single ._type text.iconfont{font-size: 40rpx;}
.book-page-single ._txt{
    margin-top: 20rpx;
    display: block;
    overflow:hidden;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
    text-align: left;
    white-space: normal;
}
.book-page-single ._time{
    position: absolute;
    left: 12rpx;
    top: 8rpx;
    display: inline-block;
    font-size: 22rpx;
    z-index: 10;
    color: white;
}
.floatSwiper-box{
    width: 100%;
    height: 360rpx;
}
.floatSwiper-item {background-color: white;width: 50vw;}
.floatSwiper-item ._insert{ margin: 0 20rpx 15rpx; background-color: #f4f4f4; border-radius: 10rpx; overflow: hidden;}
.floatSwiper-item ._header{ text-align: center; position: relative;}
.floatSwiper-item ._header image{ display: inline-block; width: 100%; height: 180rpx;}
.floatSwiper-item ._name{ text-align: center; margin-top: 20rpx;overflow: hidden; display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp: 2;
    height: 80rpx; padding: 0 10rpx;}
.floatSwiper-item ._info{ position: absolute; width: 100%; bottom: 0; left: 0; z-index: 33; display: flex; justify-content: space-between; color: white; font-size: 22rpx;
    background: -webkit-linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.45)); padding: 15rpx 0 6rpx;}
.floatSwiper-item ._info text:first-child{margin-left: 10rpx;}
.floatSwiper-item ._info text:last-child{margin-right: 10rpx;}

