.mine-background{
  position: relative;
  top: 0;
  left: 0;
  padding: 0;
  margin: 0;
  line-height: 0;
  overflow: hidden;
}
.mine-background>._shadow{
  position: absolute;
  z-index: 10;
  width: 100%;
  height: 40%;
  left: 0;
  bottom: 0;
  background-image: -webkit-linear-gradient(top, rgba(255, 255, 255, 0), white);
}
.mine-background .img{
  width: 100%;
  height: 80vh;
  filter: blur(2px);
  transform: scale(1.1, 1.1);
}

.mine-scroll {
  height:100vh;
  position:absolute;
  width:100%;
  left:0;
  top:0;
  z-index:10;
}

.mine-hasinfo{
  min-height: calc(100% - 35vh);
  padding-top: 32vh;
  padding-left: 30rpx;
  padding-right: 30rpx;
  position: relative;
  transition: transform 1s;
}

.mine-top-box {
  position: relative;
  background-color: white;
}

.mine-top-box>._avatar {
  overflow: hidden;
  position: relative;
  z-index: 1;
  height: 40vh;
}

.mine-top-box>._avatar::after {
  content: "";
  position: absolute;
  z-index: 4;
  left: 0;
  bottom: 0;
  width: 0;
  height: 0;
  border-top: 360rpx solid transparent;
  border-left: 2000rpx solid rgba(255, 255, 255, 0.3);
}

.mine-top-box>._avatar::before {
  content: "";
  position: absolute;
  z-index: 5;
  right: 0;
  bottom: 0;
  width: 0;
  height: 0;
  border-top: 480rpx solid transparent;
  border-right: 700rpx solid rgba(0, 0, 0, 0.1);
}

.mine-top-box>._avatar ._blurImg {
  filter: blur(20px);
  transform: scale(1.1, 1.1);
}

.showed {
  position: absolute;
  z-index: 22;
  left: 20rpx;
  top: 50rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  color: #f7f7f7;
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 6rpx;
  padding: 20rpx;
}

.showed .iconfont {
  font-size: 46rpx;
  margin-bottom: 5rpx;
}

.covered{
  position: absolute;
  z-index: 22;
  right: -10rpx;
  top: -80rpx;
  display: flex;
  align-items: center;
  padding: 10rpx;
  color: white;
}
.covered .iconfont {
  font-size: 60rpx;
}

.uerinfo {
  text-align: center;
  padding-bottom: 60rpx;
  position: relative;
  display: flex; flex-direction: column; align-items: center; justify-content: center;
}
.avatar {
  position: absolute;
  top: -90rpx;
  left: 50%;
  transform: translateX(-50%);
}

.avatar-img {
  display: inline-block;
  width: 170rpx;
  height: 170rpx;
  border-radius: 1000rpx;
  background-color: #eaeaea;
  box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
}
.avatar .img{
  display: inline-block;
  width: 170rpx;
  height: 170rpx;
  overflow: hidden;
  border-radius: 1000rpx;
}

.nickname {
  margin-top: 140rpx;
  display: inline-block;
  vertical-align: middle;
  font-size: 45rpx;
  font-weight: 500;
  position: relative;
}
.nickname>._edit{
  font-size: 24rpx; color: #999; display: inline-block;
  white-space:nowrap;
  position: absolute; z-index: 10; right: -120rpx; bottom: -4rpx; 
  font-weight: normal; padding: 10rpx 20rpx;
}
.nickname>._edit._o{ right: -80rpx;}
.nickSign{ margin-top: 20rpx; font-size: 24rpx;  color: #999999; }
.login-trigger{
  margin-top: 140rpx;
  font-size: 38rpx;
  text-align: center;
}
