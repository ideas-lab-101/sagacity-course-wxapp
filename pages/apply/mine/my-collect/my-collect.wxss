.collect-type{
    background-color: white;
    padding: 20rpx 10rpx;
    margin: 20rpx;
    border-radius: 10rpx;
}
.collect-type .item{
    position: relative;
    color: #4c9c47;
    width: 33.33%;
    text-align: center;
    display: inline-block;
    vertical-align: middle;
    padding: 15rpx 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.collect-type .item:nth-child(3n)::after, .collect-type .item:last-child::after{
    content: "";
}
.collect-type .item::after{
    position: absolute;
    content: "|";
    right: 0;
    top: 10rpx;
    font-size: 28rpx;
}
.collect-type .item.active{ color: #0c3a01;}

.collect-listSingle{
    background-color: white;
    margin: 20rpx;
    border-radius: 10rpx;
    padding: 30rpx 30rpx 20rpx 30rpx;
}

.collect-listSingle-h ._img{ float: left; width: 120rpx; height: 120rpx;}
.collect-listSingle-h ._img image{ width: 100%; height: 100%;}
.collect-listSingle-h ._del{
    padding-left: 160rpx;
}
.collect-listSingle-h ._del ._name{
    font-size: 36rpx;
}
.collect-listSingle-h ._del ._desc{
    font-size: 26rpx;
    color: #999;
    margin-top: 20rpx;
    display:-webkit-box;
