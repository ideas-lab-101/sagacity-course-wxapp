.mine-top-box {
  position: relative;
  background-color: white;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
  padding-bottom: 30rpx;
}

.mine-top-box>._avatar {
  overflow: hidden;
  position: relative;
  z-index: 1;
  height: 40vh;
}

.mine-top-box>._avatar::after {
  content: "";
  position: absolute;
  z-index: 4;
  left: 0;
  bottom: 0;
  width: 0;
  height: 0;
  border-top: 360rpx solid transparent;
  border-left: 2000rpx solid rgba(255, 255, 255, 0.3);
}

.mine-top-box>._avatar::before {
  content: "";
  position: absolute;
  z-index: 5;
  right: 0;
  bottom: 0;
  width: 0;
  height: 0;
  border-top: 480rpx solid transparent;
  border-right: 700rpx solid rgba(0, 0, 0, 0.1);
}

.mine-top-box>._avatar ._blurImg {
  filter: blur(20px);
  transform: scale(1.1, 1.1);
}

