
.loading-container{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  position: relative;
  z-index: 20;
  padding: 30rpx;
}
.loading-items{
  display: flex;
  align-items: center;
}
.loading-items ._item{
  margin: 0 8rpx;
  width: 16rpx;
  background-color: #ddd;
  border-radius: 100rpx;
  height: 16rpx;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
}
.loading-items ._item:nth-child(1) {
  -webkit-animation: scale 1s 0.15s infinite linear;
  animation: scale 1s 0.15s infinite linear;
}
.loading-items ._item:nth-child(2) {
  -webkit-animation: scale 1s 0.35s infinite linear;
  animation: scale 1s 0.35s infinite linear;
}
.loading-items ._item:nth-child(3) {
  -webkit-animation: scale 1s 0.55s infinite linear;
  animation: scale 1s 0.55s infinite linear;
}
@-webkit-keyframes scale {
  30% {
    -webkit-transform: scale(0.3);
    transform: scale(0.3); }

  100% {
    -webkit-transform: scale(1);
    transform: scale(1); }
}
@keyframes scale {
  30% {
    -webkit-transform: scale(0.3);
    transform: scale(0.3); }

  100% {
    -webkit-transform: scale(1);
    transform: scale(1); }
}
