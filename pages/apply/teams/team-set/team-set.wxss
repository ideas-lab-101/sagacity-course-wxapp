page{
    background-color: #f7f7f7;
}

.set-single{
    border-bottom: 1rpx solid #eee;
    padding: 30rpx;
    background-color: white;
}

.set-single ._r{
    color: #999999;
    display: flex;
    align-items: center;
}


.set-link{
    margin-top: 40rpx; padding: 0 40rpx;
}
.set-exit{
    padding: 25rpx;
    text-align: center;
    color: white;
    background-color: #f5431a;
    border-radius: 6rpx;
    font-size: 34rpx;
}
.set-exit:active{
    background-color: #d92c03;
}


.attestation-layer{
    position: fixed;
    z-index: 1100;
    width: 100%;
    top: 30%;
}
.attestation-layer>._insert{
    background-color: white;
    margin-left: 10vw;
    margin-right: 10vw;
    padding: 40rpx;
}
.attestation-layer ._link text{
    flex: 1;
    padding: 20rpx 0;
    text-align: center;
}
.attestation-layer  ._input{
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
    font-size: 30rpx;
    padding: 10rpx 0;
}