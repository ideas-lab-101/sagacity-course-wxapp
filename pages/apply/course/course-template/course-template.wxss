.sticky-classify{
  position: sticky;
  position: -webkit-sticky;
  left: 0;
  right: 0;
  z-index: 99;
  background-color: white;
  padding-top: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.sticky-search{
  margin: 10rpx 50rpx;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 1000rpx;
  display: flex;
  align-items: center;
}
.sticky-search .iconfont{ 
  padding: 10rpx 30rpx;
  font-size: 38rpx;
  color: #999999;
}
.sticky-search .input{ 
  flex: 1;
  height: 65rpx;
  line-height: 65rpx;
  font-size: 30rpx;
}
.sticky-tab{
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.sticky-tab view{
  border-bottom: 4rpx solid white;
}
.sticky-tab text{
  display: inline-block;
  padding: 16rpx 0;
}

.search-icon{
  line-height: 70rpx;
  height: 30rpx;
  width: 30rpx;
  display: inline-block;
  font-size: 40rpx;
}
.index-book-box{
  padding: 30rpx 60rpx;
  position: relative;
}
.index-book-box.active{
  background-color: rgba(0, 0, 0, 0.05);
}
.index-book-box ._name{
  line-height: 1.6;
}
.index-book-box ._desc{
  margin-top: 5rpx;
  color: #999999;
  font-size: 26rpx;
}