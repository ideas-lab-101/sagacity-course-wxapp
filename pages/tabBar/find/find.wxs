var resolveTime = function (time, full) {
  if (!time) {
    return ''
  }
  var exp = getRegExp('-', 'g')
  var temp = time.replace(exp, '/')
  var d = getDate(temp)
  var now = getDate()
  var diff = (now - d) / 1000

  if (diff < 30) {
    return '刚刚'
  } else if (diff < 3600) {
    return Math.ceil(diff / 60) + '分钟前'
  } else if (diff < 3600 * 24) {
    return Math.ceil(diff / 3600) + '小时前'
  } else if (diff < 3600 * 24 * 2) {
    return '1天前'
  }

  if (now.getFullYear() < d.getFullYear()) {
    if (getRegExp('').exec(time) == null || !full) {
      return d.getFullYear() + '年' + (d.getMonth() + 1) + '月' + d.getDate() + '日 '
    }
    return d.getFullYear() + '年' + (d.getMonth() + 1) + '月' + d.getDate() + '日 '
  }else {
    if (getRegExp('').exec(time) == null || !full) {
      return (d.getMonth() + 1) + '月' + d.getDate() + '日 '
    }
    return (d.getMonth() + 1) + '月' + d.getDate() + '日 ' + setDecimals(d.getHours()) + ':' + setDecimals(d.getMinutes())
  }
}

var setDecimals = function (val) {
  return Number(val)<10? '0'+val:val
}

var filterText = function (val){
  if (val >= 9999) {
    val = '9999+'
  }
  return val
}

module.exports = {
  resolveTime: resolveTime,
  filterText: filterText
}