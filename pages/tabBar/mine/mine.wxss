
.mine-background{
  position: relative;
  top: 0;
  left: 0;
  padding: 0;
  margin: 0;
  line-height: 0;
  overflow: hidden;
}
.mine-background>._shadow{
  position: absolute;
  z-index: 10;
  width: 100%;
  height: 40%;
  left: 0;
  bottom: 0;
  background-image: -webkit-linear-gradient(top, rgba(255, 255, 255, 0), white);
}
.mine-background image{
  width: 100%;
  height: 70vh;
  filter: blur(2px);
  transform: scale(1.1, 1.1);
}

