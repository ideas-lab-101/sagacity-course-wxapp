/*功能格子*/
.mine-learn-con {
  padding: 60rpx 40rpx 40rpx;
}
.mine-learn-con .transverse .item{
  margin-right: 8rpx !important;
  font-size: 30rpx;
  color: #333333;
}
.mine-learn-con .transverse .item:last-child{
  margin-right: 0 !important;
}

.mine-learn-con .item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 130rpx;
  font-size: 34rpx;
  font-weight: bold;
  padding: 0 50rpx;
  border: 0 !important;
  color: black !important;
  flex: 1;
  background-color: rgba(0, 0, 0, 0.04);
  margin-bottom: 8rpx;
}
.mine-learn-con .item.shareBtn {
  width: auto !important;
  min-width: unset;
  border-radius: 0;
}
.mine-learn-con .item  .iconfont {
  font-size: 46rpx;
}
.mine-learn-con .transverse .item .iconfont{
  font-size: 42rpx;
}

.item-text {
  margin-left: 10rpx;
}

.item-state {
  font-size: 22rpx;
  color: white;
  background-color: #f75f03;
  display: inline-block;
  padding: 4rpx 10rpx;
  border-radius: 100rpx;
  line-height: 1;
}
.shareBtn::after, .shareBtn:before {
  border: 0 !important;
}
.shareBtn .iconfont{
  font-size: 40rpx;
}

