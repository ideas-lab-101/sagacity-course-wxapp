.bs-single{
    position: relative;
    display: inline-block;
    vertical-align: middle;
    margin-top: 20rpx;
}
.bs-single>._insert{
    padding: 15rpx 25rpx; display: inline-block;
}
.bs-single ._image{
    display: inline-block;
    position: relative;
    z-index: 10;
    border-left: 12rpx solid #000;
}
.bs-single ._image::after{
    position: absolute; content: ""; z-index: -2; background-image: -webkit-linear-gradient(top, black, #7b7b7b, black);
    border-radius: 500rpx; width: 150rpx; height: 150rpx; right: -40rpx; top: 50%; transform: translateY(-50%); box-shadow: 28rpx 26rpx 22rpx -25rpx rgba(0, 0, 0, 0.2);
}
.bs-single ._image::before{
    position: absolute; content: ""; z-index: -1; background-image: -webkit-linear-gradient(top, #733429, #c15745, #733429);
    border-radius: 500rpx; width: 75rpx; height: 75rpx; right: -12rpx; top: 50%; transform: translateY(-50%);
    box-shadow: 0 0 4rpx rgba(0, 0, 0, 0.3);
}

.bs-single ._image>view{
    position: relative; padding: 0; display: inline-block; box-shadow: 0 16rpx 20rpx -8rpx rgba(0, 0, 0, 0.2);
}
.bs-single ._image>view::after,.bs-single ._image>view::before{
    position: absolute; content: ""; width: 1rpx; background-color: #eaeaea;
    height: 100%; left: 0rpx; top: 0; z-index: 1;
}
.bs-single ._image>view::before{
    left: auto; right: 0rpx;
}
.bs-single ._image image{
    width: 180rpx;
    height: 180rpx;
    position: relative;
}

.bs-single ._name{
    margin-top: 15rpx; font-size: 26rpx;
    width: 190rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}
.bs-single ._like{
    margin-top: 5rpx; font-size: 22rpx; color: #666;
}
.bs-single ._try{
    position: absolute;
    z-index: 10;
    left: 0;
    top: 0;
    width: 100%;
    height: 180rpx;
    text-align: right;
}
.bs-single ._insert.active ._try{
    background-color: rgba(0, 0, 0, 0.2);
}
.bs-single ._try text{
    color: white;
    font-size: 24rpx;
    display: inline-block;
    padding: 20rpx 30rpx;
    border-radius: 20rpx;
}

.bs-single.active>._insert{
    background-color: #733429;
}

.bs-single.active ._name,.bs-single.active ._like{
    background-color: #733429;
    color: white;
}