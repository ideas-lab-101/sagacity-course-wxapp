.record-container{
  height: 100vh;
  position: relative;
  display: flex;
  flex-direction: column;
}
.recordTake{
  padding: 40rpx 0;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.03);
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
}
.recordTake ._setingTake{
  border: 0 !important;
  font-size: 38rpx;
  height: 180rpx;
  line-height: 180rpx;
  padding: 0;
  width: auto !important;
}
.record-btn-box{
  position: relative;
  padding: 40rpx 0;
  background-color: rgba(0, 0, 0, 0.03);
}
.record-btn-n{
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
}
.record-btn-n ._i{
  width: 210rpx;
  text-align: center;
}
.record-mode{
  position: relative;
  width: 180rpx;
  height: 76rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}
.record-mode ._back{
  position: absolute;
  left: 5rpx;
  top: 0;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.3);
}
.record-mode .iconfont{
  position: absolute;
  left: 12rpx;
  bottom: 12rpx;
  font-size: 34rpx;
  color: rgba(0, 0, 0, 0.3);
}

.record-btn{
  text-align: center;
  display: inline-block;
  position: relative;
}
.record-btn>._transcribe{
  margin: 0 auto;
  width: 180rpx;
  height: 180rpx;
  line-height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  border-width: 1rpx;
  border-style: solid;
  border-radius: 400rpx;
  position: relative;
  z-index: 10;
  transition: transform 0.4s linear;
}
.record-btn>._transcribe::after{
  content: "";
  position: absolute;
  left: 6rpx;
  top: 6rpx;
  z-index: 10;
  border-radius: 200rpx;
  width: 165rpx;
  height: 165rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.15);
  box-shadow: 0rpx 0rpx 2rpx rgba(255, 255, 255, 0.6) inset;
}
.record-btn>._transcribe:active{
  transform: scale(0.8, 0.8);
}
.record-btn>._transcribe .img{
  width: 100rpx;
  height: 100rpx;
}
